<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAPIZZA.CusInfoInputPage"
             Title="Contact Us">
	
	  <StackLayout Orientation="Vertical"
               Padding="50"
               HorizontalOptions="Center"
               BackgroundColor="Transparent">
    
      
      <Image Source="LapizzaLogo.png" />
      
      <StackLayout>
			
	      	<Label>Name:</Label>
			<Entry Placeholder="Name"></Entry>
			
	      	<Label>Address:</Label>
			<Entry Placeholder="Address"></Entry>
			
			<Label >Contact Number:</Label>
			<Entry Placeholder="Contact Number"></Entry>
			
			<Label>Email:</Label>
			<Entry Placeholder="Email"></Entry>

			<Button Text="Place Order" TextColor="White" BackgroundColor="Gray" Clicked="NavigateButtonOrder" />

      </StackLayout>
      
  
  </StackLayout>
	
</ContentPage>